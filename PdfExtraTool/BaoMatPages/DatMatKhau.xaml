<ui:Page x:Class="PdfExtraTool.BaoMatPages.DatMatKhau"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PdfExtraTool.BaoMatPages"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:vm="clr-namespace:PdfExtraTool.ViewModel"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance Type=vm:DatMatKhauViewModel}"
      Title="DatMatKhau">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Margin="5 0 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="173*"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="75"/>
            </Grid.ColumnDefinitions>
            <TextBox ui:ControlHelper.Header="Chọn file" Text="{Binding SelectedFile}" Margin="5 0 0 0"/>
            <ui:ProgressRing Grid.Column="1" Width="20" IsActive="{Binding IsLoading}" Margin="3 0 0 6" VerticalAlignment="Bottom"/>
            <Button Grid.Column="2" VerticalAlignment="Bottom" Margin="5 0"
                    Command="{Binding SelectFileCommand}">Chọn</Button>
        </Grid>
        <PasswordBox x:Name="ProtectedPasswordBox" Grid.Row="1" ui:ControlHelper.Header="Đặt mật khẩu bảo vệ file" Margin="10"/>
        <GroupBox Header="Tùy chọn" Grid.Row="2" Margin="10 0">
            <StackPanel>
                <CheckBox IsChecked="{Binding AllowPrint}">Cho phép in</CheckBox>
                <CheckBox IsChecked="{Binding AllowCopy}">Cho phép copy văn bản</CheckBox>
            </StackPanel>
        </GroupBox>
        <Button Grid.Row="3" Margin="10 10 0 0" VerticalAlignment="Top" Command="{Binding SetPasswordPdfCommand}">Thực hiện</Button>
    </Grid>
</ui:Page>
