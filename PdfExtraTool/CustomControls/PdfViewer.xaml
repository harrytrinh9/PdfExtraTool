<UserControl x:Class="PdfExtraTool.CustomControls.PdfViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PdfExtraTool.CustomControls"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             d:DataContext="{d:DesignInstance Type=local:PdfViewer}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ui:ProgressRing x:Name="LoadingProgressRing" Width="35" Height="35"/>
        <ui:ListView x:Name="ListViewPages" >
            <ui:ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0 3">
                        <Image Source="{Binding Image}" Margin="0 0 0 5"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding Page}"/>
                            <TextBlock Text=" / "/>
                            <TextBlock Text="{Binding TotalPage}"/>
                        </StackPanel>
                    </StackPanel>

                </DataTemplate>
            </ui:ListView.ItemTemplate>
        </ui:ListView>
    </Grid>
</UserControl>
